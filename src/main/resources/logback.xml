<configuration>
    <appender name="FILE" class="ch.qos.logback.core.FileAppender">
        <file>logfile.html</file>
        <encoder class="ch.qos.logback.core.encoder.LayoutWrappingEncoder">
            <layout class="ch.qos.logback.classic.html.HTMLLayout">
                   <PatternLayout   pattern="[%-5level] %d{yyyy-MM-dd HH:mm:ss.SSS} [%t] %c{1} - %msg%n" />
                <title>My Application Logs</title>
                <column name="Date" title="Date" class="timestamp"/>
                <column name="Level" title="Level" class="level"/>
                <column name="Thread" title="Thread" class="thread"/>
                <column name="Logger" title="Logger" class="logger"/>
                <column name="Message" title="Message" class="message"/>
            </layout>
        </encoder>
    </appender>
    
    <root level="debug">
        <appender-ref ref="FILE" />
    </root>
</configuration>
